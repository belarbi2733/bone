          <h3>Input : Image or Video: <h3>
          
                  
            <img id="blah" src="https://www.agiftunited.com/public/images/preview.png" style="-webkit-border-radius:5px; width:460px; height:460px;" class="img-responsive portfolio-item" alt="your image" />
          <input type="file" name="fichier" class="btn btn-info" id="videoUploadFile" style="width:250px;""><br>
                    <fieldset>
                        <legend><b>Preprocessing Algorithms :</b></legend>
                        <label class="checkbox-inline"><input type="radio" id="e" value="Gaussian Filter" name="algo">&nbsp;Gaussian Filter</label>
                        <label class="checkbox-inline"><input type="radio" id="f" value="Blur Filter" name="algo">&nbsp;Blur Filter</label>
                         <label class="checkbox-inline"><input type="radio" id="g" value="Bilateral Filter" name="algo">&nbsp;Bilateral Filter</label>
                        <label class="checkbox-inline"><input type="radio" id="h" value="Median Filter" name="algo">&nbsp;Median Filter</label>
                    </fieldset>
                    <br>
                    <fieldset>
                        <legend><b>Feature Detection Algorithms :</b></legend>
                        <label class="checkbox-inline"><input type="radio" id="a" value="SIFT" name="algo">&nbsp;SIFT</label>
                        <label class="checkbox-inline"><input type="radio" id="b" value="SURF" name="algo">&nbsp;SURF</label>
                        <label class="checkbox-inline"><input type="radio" id="c" value="Color_Histogram" name="algo">&nbsp;Color Histogram</label>
                        <label class="checkbox-inline"><input type="radio" id="d" value="Hsv_Histogram" name="algo">&nbsp;HSV Histogram</label>
                        <label class="checkbox-inline"><input type="radio" id="i" value="Harris" name="algo">&nbsp;Harris</label>
                        <label class="checkbox-inline"><input type="radio" id="j" value="Canny" name="algo">&nbsp;Canny</label>
                        <label class="checkbox-inline"><input type="radio" id="k" value="Countours" name="algo">&nbsp;Countours</label><br><br>
                        <label class="checkbox-inline"><input type="radio" id="l" value="Laplacien" name="algo">&nbsp;Laplacien</label>
                        <label class="checkbox-inline"><input type="radio" id="m" value="Water Shed" name="algo">&nbsp;Water Shed</label>
                    </fieldset>
                   
                    <br>
          <input type="submit" value="Get the output result " class="btn btn-success" onclick="return fun();">
              </div>
              <div id="progress" class="col-sm-8 col-xs-8">
                  
              </div>
            
          </form>
         

        </div>
        <hr>
    </div>
      <script src="{{asset('design/js/jquery.js')}}"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="{{asset('design/js/bootstrap.min.js')}}"></script>
{%endblock body%}