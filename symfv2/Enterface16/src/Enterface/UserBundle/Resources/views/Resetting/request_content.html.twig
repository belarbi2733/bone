<form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
    <div>
        {% if invalid_username is defined %}
            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
        {% endif %}
        <table class="table table-responsive" align="center" >
            <tr>
                <td><label for="username">{{ 'resetting.request.username'|trans({}, 'FOSUserBundle') }}</label></td>
                <td><input type="text" id="username" name="username" required="required" /></td>
            </tr>
        </table>
    </div>
    <div>
        <input type="submit" class="btn btn-primary btn-lg" value="{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}" />
    </div>
</form>
